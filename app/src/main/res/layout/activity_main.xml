<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Choose a device" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/imageButton_sync" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-scan paired devices"
        android:id="@+id/button_paired"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_on"
        android:src="@mipmap/on"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_sync"
        android:src="@mipmap/sync"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_exit"
        android:src="@mipmap/exit"
        android:padding="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageButton_sync"
        android:layout_alignStart="@+id/imageButton_sync" />

    <TextView
        android:text="Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/imageButton_on"
        android:layout_toRightOf="@+id/imageButton_on"
        android:layout_toEndOf="@+id/imageButton_on" />

    <TextView
        android:text="Sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/imageButton_sync"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignRight="@+id/imageButton_exit"
        android:layout_alignEnd="@+id/imageButton_exit"
        android:layout_above="@+id/imageButton_exit"
        android:layout_below="@+id/textView" />
</RelativeLayout>
